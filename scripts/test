#!/bin/bash

set -e

if [[ -n "${CI}" ]]; then
    set -x
fi

set -u

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Test container images built from templates.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    if [ "${1:-}" = "--help" ]; then
        usage
    else
        docker run --rm -it \
            "quay.io/rbreslow/lua:${LUA_VERSION}" -v

        docker run --rm -it --entrypoint luarocks \
            "quay.io/rbreslow/lua:${LUA_VERSION}" --version
    fi
fi
